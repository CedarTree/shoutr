<div>
  <%= link_to current_user.email, current_user.user_name %>
  <ul>
    <li><%= link_to "Who You're Following", :following %>: <%= current_user.followed_users.count %></li>
    <li><%= link_to "Followers", :followers %>: <%= current_user.followers.count %></li>
  </ul>
</div>

  <%= form_for @shout do |form| %>
  <%= form.text_area :subject, placeholder: "Shout" %>
  <%= form.submit "Shout" %>
  <% end %>

<div>
  <%= form_for @image_subject do |form| %>
   <%= form.text_field :url, placeholder: "Image URL" %>
   <%= form.submit "Shout image" %>
  <% end %>
</div>

<h2> Timeline </h2>
<%= render current_user.timeline %>
